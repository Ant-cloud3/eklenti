{
    "manifest_version": 3,
    "name": "YouTube Shorts Auto Scroll",
    "version": "1.0.0",
    "description": "YouTube Shorts videolar覺n覺 otomatik olarak kayd覺r覺r",
    "browser_specific_settings": {
        "gecko": {
            "id": "youtube-shorts-auto-scroll@example.com",
            "strict_min_version": "109.0"
        }
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "http://localhost:3000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/shorts/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "YouTube Shorts Auto Scroll"
    }
}