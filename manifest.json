{
  "manifest_version": 3,
  "name": "ShortsFlow Pro",
  "version": "1.0.0",
  "description": "YouTube Shorts videolarını bittiğinde otomatik olarak kaydırır.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/shorts/*"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "shortsflowpro@example.com",
      "strict_min_version": "109.0"
    }
  }
}
